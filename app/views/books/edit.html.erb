<h1>編集画面</h1>
<!-- form_with部分 -->
<%= form_with model:@book,url: book_path(@book), method: :patch, local: true do |k| %>
  <h4>タイトル</h4>
  <%= k.text_field :title %>
  <h4>カテゴリー</h4>
  <%= k.text_field :category %>
  <h4>本文</h4>
  <%= k.text_area :body %>
  <%= k.submit 'Update Book' %>
<% end %>
<% if flash[:notice] %>
  <p><%= flash[:notice] %></p>
<% end %>
